{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh, bash"],
      "ignoredRootPaths": ["~"]
    },
    "r": {
      "command": "R",
      "args": ["--slave", "-e", "languageserver::run()"],
      "filetypes": ["r"],
      "ignoredRootPaths": ["~"]
    }
  }
}
